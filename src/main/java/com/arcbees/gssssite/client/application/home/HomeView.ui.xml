<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.gssssite.client.resources.AppResources"/>

    <g:HTMLPanel styleName="{res.style.home}">
        <header class="{res.style.header}">
            <div class="{res.grid.row} {res.style.container} {res.style.clearfix}">
                <div class="{res.grid.col} {res.grid.col_1_2}">
                    <h1>GSS on Stero√Øds</h1>
                    <p>Unleash the power of GssResource and CSS3 in your GWT application</p>
                </div>
                <div class="{res.grid.col} {res.grid.col_1_2}">
                    <ul>
                        <li>
                            <a href="#/docs">Docs <i class="fa fa-file-code-o"></i></a>
                        </li>
                        <li>
                            <a href="https://github.com/ArcBees/gss-plus-plus">GitHub <i class="fa fa-github"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>

        <nav role="navigation" class="{res.style.nav}">
            <div class="{res.grid.row} {res.style.container} {res.style.clearfix}">
                <div class="{res.grid.col} {res.grid.col_1_2}">
                    <a href="#/home" class="{res.style.logo}">Gss++</a>
                </div>
                <ul class="{res.grid.col} {res.grid.col_1_2}">
                    <li>
                        <a href="#/docs">Documentation</a>
                    </li>
                    <li>
                        <a href="https://github.com/ArcBees/gss-plus-plus">GitHub</a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="{res.style.content} {res.style.container}">
            <div class="{res.grid.row} {res.style.clearfix}">
                <div class="{res.grid.col} {res.grid.col_full}">
                    <code>
                        <pre>
.my-button {
    @mixin rounded(18px);
    @mixin shadow_text(-1, -1, 0, 0.6);
    @mixin gradient(#800eeb, #4b0c86);
    <span class="{res.style.greyed}">color: #fff;</span>
    <span class="{res.style.greyed}">text-align: center;</span>
    <span class="{res.style.greyed}">...</span>
}

.my-button:before {
    @mixin rounded(23px);
    @mixin shadow_inner(0, 1px, 3px, 0.7);
    @mixin gradient(#D0D0D0, #e9e9e9);
    <span class="{res.style.greyed}">content: "";</span>
    <span class="{res.style.greyed}">position: absolute;</span>
    <span class="{res.style.greyed}">...</span>
}

.my-button:hover {
    @mixin gradient(#4b0c86, #800eeb);
}</pre>
                    </code>
                </div>
                <div class="{res.grid.col} {res.grid.col_full}">
                    <a href="#/docs" class="{res.style.myelement}">Let's get started</a>
                </div>
            </div>
        </section>
    </g:HTMLPanel>
</ui:UiBinder>
